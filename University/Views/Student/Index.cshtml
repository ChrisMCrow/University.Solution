<h2>All Students</h2>

@foreach (var student in Model)
{
  <h4><a href='/students/@student.Id'>@student.Name</a> | @student.EnrollmentDate</h4>
  <h6><a href='/students/@student.Id/update'>Update</a> | <a href='/students/@student.Id/delete'>Delete</a></h6>
}

<hr />
<h2>Add a New Student</h2>
<form action='/students' method='post'>
  <div class='form-group'>
    <label for='studentName'>Enter Student Name:</label>
    <input name='studentName' type='text' class='form-control' />
  </div>
  <div class='form-group'>
    <label for='enrollmentString'>Enter Enrollment Date:</label>
    <input name='enrollmentString' type='date' class='form-control'/>
  </div>
  <button type='submit' class='btn btn-warning'>Add</button>
</form>
<h4><a href="/">Back home</a></h4>
